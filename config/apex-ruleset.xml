<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="Basic Apex Rules"
         xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 https://pmd.github.io/pmd-6.55.0/pmd-6.55.0.xsd">
    
    <description>Basic PMD ruleset for Salesforce Apex development</description>

    <!-- Buenas prácticas generales -->
    <rule ref="category/apex/bestpractices.xml"/>

    <!-- Errores comunes -->
    <rule ref="category/apex/errorprone.xml">
        <exclude name="EmptyStatementBlock"/> <!-- Excluir bloques vacíos como "if () {}" -->
        <exclude name="EmptyIfStmt"/> <!-- Excluir IFs vacíos intencionales -->
    </rule>
    <!-- Diseño y estructura -->
    <rule ref="category/apex/design.xml">
        <exclude name="ExcessiveParameterList"/>
        <exclude name="CyclomaticComplexity"/>
        <exclude name="ExcessiveClassLength"/>
        <exclude name="CognitiveComplexity"/> <!-- Excluir métodos con lógica compleja permitida -->
    </rule>
</ruleset>