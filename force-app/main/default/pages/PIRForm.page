<apex:page contentType="application/msword" standardController="Late_Load__c" cache="true" showHeader="false" sidebar="false">
    <apex:variable var="TimeOfIncident" value="{!Late_Load__c.Time_of_Incident__c}" />
    <html xmlns:w="urn:schemas-microsoft-com:office:word">
<head>
    <style>
        body {
            font-family: Calibri, Arial, sans-serif;
            font-size: 12px;
            color: #000;
            background-color: #fff;
            margin: 0;
            padding: 0;
        }
        
        .container {
            width: 100%;
            max-width: 210mm; /* A4 width for printing */
            margin: 0 auto;
        }
        
        /* Table Styles */
        .report-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 10px;
        }
        
        .report-table td {
            border: 1px solid #000;
            padding: 6px;
            vertical-align: top;
        }
        
        /* Section Headers */
        .section-header {
            font-size: 16px;
            font-weight: bold;
            color: #000;
            margin: 20px 0 10px 0;
            text-align: left;
        }
        
        /* Header table styles */
        .header-table {
            border: 1px solid #000;
        	border-collapse: collapse;
        	width: 100%
        }
        
        .header-table td {
            border: 1px solid #000;
        	padding: 8px;
        	vertical-align: middle;
        
        }
        
        .logo-cell {
            width: 50%;
            color: transparent;
            text-align: left;
        	border: 1px solid #000;
        }
        
        .title-cell {
            width: 50%;
            background-color: #a8d08d;
            text-align: center;
        	border: 1px solid #000;
        }
        
        /* Table Cell Types */
        .label-cell {
            width: 40%;
            background-color: #a8d08d;
            color: #000;
            font-weight: bold;
            vertical-align: top;
        }
        
        .value-cell {
            width: 60%;
            background-color: #fff;
            color: #000;
            vertical-align: top;
        }
        
        /* Styling for Report Origin section */
        .label-cell-vertical {
            width: 40%;
            background-color: #a8d08d;
            color: #000;
            font-weight: bold;
        	font-size: 14px;
            vertical-align: middle;
            text-align: left;
            padding: 20px 8px;
        }
        
        .value-cell-stacked {
            width: 60%;
            background-color: #fff;
            color: #000;
            padding: 0;
        }
        
        .value-row {
            padding: 8px;
            border-bottom: 1px solid #000;
        }
        
        .value-row:last-child {
            border-bottom: none;
        }
        
        /* Section title row for Details of Incident */
        .section-title-row {
            background-color: #a8d08d;
            font-weight: bold;
            text-align: left;
            padding: 8px;
        }
        
        .description-text {
            padding: 8px;
            background-color: #fff;
            text-align: left;
        }
        
        /* 5W1H Table */
        .incident-table {
            width: 100%;
            border-collapse: collapse;
            margin: 0;
        }
        
        .incident-table td {
            border: 1px solid #000;
            padding: 8px;
            vertical-align: top;
        }
        
        .question-cell {
            background-color: #a8d08d;
            font-weight: bold;
            width: 15%;
        }
        
        .instruction-cell {
            background-color: #fff;
            width: 42.5%;
        }
        
        .manual-cell {
            background-color: #fff;
            width: 42.5%;
        }
        
        /* Attachment text and empty space */
        .attachment-section {
            margin: 15px 0;
            padding: 0 8px;
        }
        
        .empty-space {
            height: 300px;
            border: 1px solid #000;
            margin: 10px 0;
        }
        
        /* Root Cause Table */
        .root-cause-header {
            background-color: #a8d08d;
            font-weight: bold;
            font-style: italic;
            padding: 8px;
        }
        
        .root-cause-question {
            background-color: #a8d08d;
            font-weight: bold;
            width: 15%;
        }
        
        .root-cause-value {
            background-color: #fff;
            width: 85%;
        }
        
        /* Actions Table */
        .actions-table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }
        
        .actions-table td {
            border: 1px solid #000;
            padding: 8px;
            vertical-align: top;
        }
        
        /* Review Section */
        .review-header {
            font-size: 16px;
            font-weight: bold;
            color: #000;
            margin: 30px 0 10px 0;
            text-align: left;
        }
        
        /* Image styles */
        .logo-img {
            width: 250px;
            height: 97px;
        }
        
        .title-text {
            font-size: 24px;
            font-weight: bold;
        }
        
        /* Utility classes */
        .no-margin {
            margin: 0;
            padding: 2px;
        }
        
        /* Print optimization */
        @media print {
            .container {
                max-width: none;
                margin: 0;
            }
            
            .report-table {
                page-break-inside: avoid;
            }
        }
        a.record-link {
            color: #0066cc;
            text-decoration: none;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Header Section -->
        <table class="report-table header-table">
            <tbody>
                <tr>
                    <td class="logo-cell">
                        <p class="no-margin">
                                 <img class="logo-img" src="data:image/png;base64,"
                                      />
                                      </p>
                    </td>
                    <td class="title-cell">
                        <p class="no-margin">
                            <span class="title-text">PIR Form</span>
                        </p>
                    </td>
                </tr>
            </tbody>
        </table>

        <!-- Section 1: Originator -->
        <h2 class="section-header">1. Originator</h2>
        <table class="report-table">
            <tbody>
                <tr>
                    <td class="label-cell">Name :</td>
                    <td class="value-cell">{!$User.FirstName} {!$User.LastName}</td>
                </tr>
                <tr>
                    <td class="label-cell">Position :</td>
                    <td class="value-cell">{!$User.Title}</td>
                </tr>
                <tr>
                    <td class="label-cell">Department:</td>
                    <td class="value-cell">{!$User.Department}</td>
                </tr>
                <tr>
                    <td class="label-cell">Company :</td>
                    <td class="value-cell">{!$User.CompanyName}</td>
                </tr>
            </tbody>
        </table>
        <br/>
        <!-- Report Origin Section -->
        <table class="report-table">
            <tbody>
        <tr>
            <td class="label-cell-vertical" rowspan="3"><br/><br/>Report Origin (Please Highlight)</td>
            <td class="value-cell">Customer Complaint / Feedback</td>
        </tr>
        <tr>
            <td class="value-cell">Internal Issue</td>
        </tr>
        <tr>
            <td class="value-cell">Other (include more Information)</td>
        </tr>
    </tbody>
        </table>

        <!-- Section 2: Initial Information -->
        <h2 class="section-header">2. Initial Information</h2>
        <table class="report-table">
            <tbody>
                <tr>
                    <td class="label-cell">Complaint Ref (Encirc)</td>
                    <td class="value-cell"> </td>
                </tr>
                <tr>
                    <td class="label-cell">Identified Issue (Shot Load , Late Delivery)</td>
                    <td class="value-cell">{!Late_Load__c.RecordType.Name}</td>
                </tr>
                <tr>
                    <td class="label-cell">Load</td>
                    <td class="value-cell">{!Late_Load__c.Dispatch__r.Freight_Reference__c}</td>
                </tr>
                <tr>
                    <td class="label-cell">Customer Impacted</td>
                    <td class="value-cell">	{!Late_Load__c.Customer__r.Name}</td>
                </tr>
                <tr>
                    <td class="label-cell">Production Line Downtime</td>
                    <td class="value-cell">{!Late_Load__c.Production_Line_Downtime__c}</td>
                </tr>
                <tr>
                    <td class="label-cell">Load Details (Shipment Reference)</td>
                    <td class="value-cell">{!Late_Load__c.Dispatch__r.Shipment_Number__c}</td>
                </tr>
                <tr>
                    <td class="label-cell">Date of Incident</td>
                   <td>
                       <apex:outputText value="{0,date,dd/MM/yyyy}">
                    <apex:param value="{!Late_Load__c.Date_of_Incident__c}" />
                       </apex:outputText></td>
                </tr>
                <tr>
                    <td class="label-cell">Time Of Incident</td>
                    <td class="value-cell">{!LEFT(TEXT(TimeOfIncident), 5)}</td>
                </tr>
            </tbody>
        </table>
        <br/><br/><br/><br/><br/>
        <!-- Section 3: Incident Description / Details -->
        <h2 class="section-header">3. Incident Description / Details</h2>
        
        <!-- Details of Incident with full-width structure -->
        <table class="report-table">
            <tbody>
                <tr>
                    <td class="section-title-row">Details of Incident</td>
                </tr>
                <tr>
                    <td class="description-text">
                        Please complete details of the incident below using the 05W1H method
                        <table class="incident-table" style="margin-top: 10px;">
                            <tbody>
                                <tr>
                                    <td class="question-cell">1. What?</td>
                                    <td class="instruction-cell">What is the nature of the problem?</td>
                                    <td class="manual-cell"></td>
                                </tr>
                                <tr>
                                    <td class="question-cell">2. Why?</td>
                                    <td class="instruction-cell">Why is it a problem? Quantify the effect and disruption caused.</td>
                                    <td class="manual-cell"></td>
                                </tr>
                                <tr>
                                    <td class="question-cell">3.Where?</td>
                                    <td class="instruction-cell">Where was the problem observed? (particular bottle, area)</td>
                                    <td class="manual-cell"></td>
                                </tr>
                                <tr>
                                    <td class="question-cell">4.Who?</td>
                                    <td class="instruction-cell">Who is impacted? (Customer? Supplier?)</td>
                                    <td class="manual-cell"></td>
                                </tr>
                                <tr>
                                    <td class="question-cell">5.When?</td>
                                    <td class="instruction-cell">When was the problem first observed?</td>
                                    <td class="manual-cell"></td>
                                </tr>
                                <tr>
                                    <td class="question-cell">6. How?</td>
                                    <td class="instruction-cell">How much of an impact / loss has occurred? E.g. 2 hours downtime, 06 pallets collapsed</td>
                                    <td class="manual-cell"></td>
                                </tr>
                            </tbody>
                        </table>
                        <br/>
                        Please attach telematics data(If NCR is for a collapsed / Shot Load)<br/>
                        and or pictures of the incident below:<br/>
                        <p>
                        </p>
                        <br/>
                    </td>
                </tr>
            </tbody>
        </table>

        <!-- Empty space for attachments -->
        <div class="empty-space"></div>
        <br/>
        <!-- Root Cause Section -->
        <table class="report-table">
            <tbody>
                <tr>
                    <td class="root-cause-header">Root Cause (use 5-why's method)</td>
                </tr>
            </tbody>
        </table>
        
        <table class="report-table">
            <tbody>
                <tr>
                    <td class="root-cause-question">Why?</td>
                    <td class="root-cause-value"></td>
                </tr>
                <tr>
                    <td class="root-cause-question">Why?</td>
                    <td class="root-cause-value"></td>
                </tr>
                <tr>
                    <td class="root-cause-question">Why?</td>
                    <td class="root-cause-value"></td>
                </tr>
                <tr>
                    <td class="root-cause-question">Why?</td>
                    <td class="root-cause-value"></td>
                </tr>
                <tr>
                    <td class="root-cause-question">Why?</td>
                    <td class="root-cause-value"></td>
                </tr>
                <tr>
                    <td class="root-cause-question">Root Cause</td>
                    <td class="root-cause-value"></td>
                </tr>
            </tbody>
        </table>

        <!-- Actions Section -->
        <table class="actions-table">
            <tbody>
                <tr>
                    <td class="label-cell">Root cause identified</td>
                    <td class="value-cell"></td>
                </tr>
                <tr>
                    <td class="label-cell">Corrective action to be implemented</td>
                    <td class="value-cell"></td>
                </tr>
                <tr>
                    <td class="label-cell">Preventive actions to be implemented</td>
                    <td class="value-cell"></td>
                </tr>
            </tbody>
        </table>

        <!-- Section 4: Encirc Review -->
        <h2 class="review-header">4. Encirc Review (to be completed by Encirc Team)</h2>
        <table class="report-table">
            <tbody>
                <tr>
                    <td class="label-cell">Reviewed By</td>
                    <td class="value-cell"></td>
                </tr>
                <tr>
                    <td class="label-cell">Actions &amp; Root Cause Accepted (Yes / No)</td>
                    <td class="value-cell"></td>
                </tr>
                <tr>
                    <td class="label-cell">If no Additional info required</td>
                    <td class="value-cell"></td>
                </tr>
                <tr>
                    <td class="label-cell">Date</td>
                    <td class="value-cell"></td>
                </tr>
            </tbody>
        </table>
    </div>
</body>
</html>
</apex:page>