<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>allInternalUsers</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>MPA_MPTR_No__c</field>
        <field>CreatedBy</field>
        <field>Owner</field>
        <field>Account_Manager__c</field>
        <field>Approval_Status__c</field>
        <field>Customer__c</field>
        <field>RecordType</field>
        <field>Who_Pays_For_Moulds__c</field>
        <field>Mould_Number__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Update_Approval_Status_Field_4</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>breege.harte@encirc360.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Approval required from Material Planner</description>
        <label>Seek Approval from Material Planner 2</label>
        <name>Seek_Approval_from_Material_Planner_2</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>paddy.odoherty1@encirc360.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>MPA record approval sought from Ops Director</description>
        <label>Seek Approval from Operations Director</label>
        <name>Seek_Approval_from_Operations_Director</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>dwayne.nixon@encirc360.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>MPA record submitted to Finance Director</description>
        <label>Seek Approval from Finance Director</label>
        <name>Seek_Approval_from_Finance_Director</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Approval process for MPA records created and submitted by Account Managers / Sales Department</description>
    <emailTemplate>Approval_Process_Email_Templates/MPA_Sales_Initiated_Approval_Submission</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>MPA__c.RecordType</field>
            <operation>equals</operation>
            <value>Sales Initiated</value>
        </criteriaItems>
        <criteriaItems>
            <field>MPA__c.Sales_Organization_Text__c</field>
            <operation>equals</operation>
            <value>UK</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Inform_all_members_of_Public_Group_Design_Group_that_a_record_has_been_approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Inform_submitter_that_request_has_been_approved_2</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Approval_Status_Field_5</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Inform_all_members_of_Public_Group_Design_Group_that_a_record_has_been_rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Inform_submitter_that_request_has_been_rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Notify_Maria_Orr_that_an_MPA_Approval_Request_has_been_Rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Approval_Status_Field_14</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Inform_all_members_of_Public_Group_Design_Group_that_a_record_has_been_submitted</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Approval_Status_Field_12</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Sales Initiated MPA Approval Process v2</label>
    <processOrder>3</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
