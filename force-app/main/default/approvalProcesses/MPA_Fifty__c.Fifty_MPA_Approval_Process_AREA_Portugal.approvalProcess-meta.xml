<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Product__c</field>
        <field>Mould_Quantity__c</field>
        <field>Volume__c</field>
        <field>Plant__c</field>
        <field>Account__c</field>
        <field>Comments__c</field>
        <field>Moulds_Agreement__c</field>
        <field>Owner</field>
        <field>Approval_Status__c</field>
        <field>CreatedBy</field>
        <field>LastModifiedBy</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Pending_planning_approval</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Account_Owner__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Step1 Account Owner Approves</label>
        <name>Step1</name>
        <rejectionActions>
            <action>
                <name>Notification_to_go_back_to_the_Planning_Manager</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>josepedromagalhaes1@vidrala.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>MPA_Fifty__c.Approval_Status__c</field>
                <operation>equals</operation>
                <value>Pending Planning Approval</value>
            </criteriaItems>
        </entryCriteria>
        <label>Fifty Area Manager Approval</label>
        <name>Fifty_Area_Manager_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Portugal Area Manager</description>
    <emailTemplate>Vidrala_Templates/Initial_Approval_Submission_EMAIL_MPA_FIFTY</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>ISPICKVAL(Approval_Status__c, &quot;New - Unsubmitted&quot;)  &amp;&amp;   ISPICKVAL(Account__r.Market__c, &quot;PT&quot;
)</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approval_Accepted_to_Account_Owner_and_Planning_Manager</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Change_Status_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Approval_Rejected_EMAIL_MPA_Fifty</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Change_Status_to_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Update_Approval_Status_To_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Vidrala EU MPA Approval Process AREA PT</label>
    <processOrder>4</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
