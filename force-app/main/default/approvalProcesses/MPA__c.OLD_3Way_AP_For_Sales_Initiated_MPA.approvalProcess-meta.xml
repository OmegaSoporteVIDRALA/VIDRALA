<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Account_Manager__c</field>
        <field>Approval_Status__c</field>
        <field>CreatedBy</field>
        <field>CurrencyIsoCode</field>
        <field>Customer__c</field>
        <field>Customer_Contact__c</field>
        <field>Who_Pays_For_Moulds__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Finance</name>
                <type>queue</type>
            </approver>
            <approver>
                <name>Operations</name>
                <type>queue</type>
            </approver>
            <approver>
                <name>Planning</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <label>Unanimous Approval Required From 3 Approvers</label>
        <name>Unanimous_Approval_Required_From_3_Approvers</name>
    </approvalStep>
    <description>OLD version - used in project development. Superseded by v0.2</description>
    <emailTemplate>Approval_Process_Email_Templates/MPA_Sales_Initiated_Approval_Submission</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>MPA__c.RecordType</field>
            <operation>equals</operation>
            <value>Sales Initiated</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Send_Email_Confirmation_to_Submitter_Approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Approval_Status_Field_To_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Send_Email_Confirmation_to_Submitter_Rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Approval_Status_Field_To_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Send_Email_Alert_To_All_Three_Approvers</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Set_date_of_initial_AP_submission_2</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Approval_Status_Field</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>OLD - 3 Way AP  For Sales-Initiated MPA</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
