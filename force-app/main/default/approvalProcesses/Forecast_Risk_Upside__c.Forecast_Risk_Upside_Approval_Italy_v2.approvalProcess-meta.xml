<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <submitter>Risk_Upside_Submitters</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>pete.jones1@encirc360.com</submitter>
        <type>user</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>g.cussino@vidrala.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>User.UserRole</field>
                <operation>notEqual</operation>
                <value>Head of Sales (Italy)</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Head of Italy Approval</label>
        <name>Head_of_Italy_Approval</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <label>Head of EMEA Approval</label>
        <name>Head_of_EMEA_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <emailTemplate>Approval_Process_Email_Templates/Forecast_Risk_Opportunity_Approval_Request_Submitted</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Forecast_Risk_Upside__c.Approval_Status__c</field>
            <operation>equals</operation>
            <value>New - Unsubmitted,Rejected</value>
        </criteriaItems>
        <criteriaItems>
            <field>Forecast_Risk_Upside__c.Forecast_Month_Sales_Org__c</field>
            <operation>equals</operation>
            <value>VD30</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Email_Risk_Upside_submitter_to_confirm_approval</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Approval_Rejection_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Record_Type_to_Approved_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Risk_Ups_Approval_Sts_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Email_Risk_Upside_submitter_to_advise_of_rejection</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Approval_Rejection_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Record_Type_to_Approved_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Risk_Ups_Approval_Sts_to_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Update_Record_Type_to_Standard</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Risk_Ups_Approval_Sts_to_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Forecast Risk/Upside Approval (Italy) v2</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Rebate_Approval_Manager__c</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>2</processOrder>
    <recallActions>
        <action>
            <name>Update_Risk_Ups_Approval_Status_to_New</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
