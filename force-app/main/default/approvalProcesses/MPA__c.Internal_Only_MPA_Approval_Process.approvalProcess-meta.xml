<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>CreatedBy</field>
        <field>Approval_Status__c</field>
        <field>Customer__c</field>
        <field>MPA_MPTR_No__c</field>
        <field>RecordType</field>
        <field>Mould_Number__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Email_submitter</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>paddy.odoherty1@encirc360.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Approval required from Ops Director</description>
        <label>Seek Approval from Operations Director 2</label>
        <name>Seek_Approval_from_Operations_Director_2</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>dwayne.nixon@encirc360.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Seek Approval from Finance Director</description>
        <label>Seek Approval from Finance Director 2</label>
        <name>Seek_Approval_from_Finance_Director_2</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Approval Process for MPA records submitted by, and visible only by, Design Group (plus the relevant approvers)</description>
    <emailTemplate>Approval_Process_Email_Templates/MPA_Internal_Only_Request_Submitted</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>MPA__c.RecordType</field>
            <operation>equals</operation>
            <value>Internal Only</value>
        </criteriaItems>
        <criteriaItems>
            <field>MPA__c.Sales_Organization_Text__c</field>
            <operation>equals</operation>
            <value>UK</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Email_submitter_to_confirm_record_is_Approved_3</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Notify_Design_Group_that_an_MPA_Approval_Request_has_been_Approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Approval_Status_Field_10</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Email_all_members_of_Public_Group_Design_to_advise_of_record_rejection</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Email_submitter_to_confirm_record_is_Rejected_2</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Approval_Status_Field_8</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Inform_Public_Group_Design_Group_that_a_record_has_been_submitted_for_approval</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Approval_Status_Field_6</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Internal Only MPA Approval Process</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
