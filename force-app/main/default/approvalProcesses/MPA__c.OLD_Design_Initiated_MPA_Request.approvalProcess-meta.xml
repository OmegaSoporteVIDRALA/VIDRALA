<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>CreatedBy</field>
        <field>EG_Code__c</field>
        <field>Annual_Demand_000_s__c</field>
        <field>Current_Stock_000_s__c</field>
        <field>Current_Stock_Coverage_weeks__c</field>
        <field>Mould_Type__c</field>
        <field>Current_Mould_Life_Remaining_000_s__c</field>
        <field>Remaining_Mould_Life_Cover_weeks__c</field>
        <field>Total_Weeks_Coverage__c</field>
        <field>Type_of_Set_Requested__c</field>
        <field>Est_Volume_From_New_Set__c</field>
        <field>Est_Coverage_From_New_Set_weeks__c</field>
        <field>Est_New_Mould_Costs__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Finance</name>
                <type>queue</type>
            </approver>
            <approver>
                <name>Operations</name>
                <type>queue</type>
            </approver>
            <approver>
                <name>Planning</name>
                <type>queue</type>
            </approver>
            <approver>
                <name>Account_Manager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Submit for Unanimous Approval</label>
        <name>Submit_for_Unanimous_Approval</name>
    </approvalStep>
    <description>OLD version - used in project development. Superseded by v0.2</description>
    <emailTemplate>Approval_Process_Email_Templates/MPA_Design_Initiated_Approval_Request</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>MPA__c.RecordType</field>
            <operation>equals</operation>
            <value>Design Initiated</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Change_Status_Field_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Planning_MPA_Request_Approved</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Change_Status_Field_to_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Planning_MPA_Request_Rejected</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Change_Status_Field_to_Pending</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Email_Alert_to_Account_Owner</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Set_date_of_initial_AP_submission</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>OLD - Design Initiated MPA Request</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
