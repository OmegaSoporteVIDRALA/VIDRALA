<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>CreatedBy</field>
        <field>Reason_for_Rebate__c</field>
        <field>Account__c</field>
        <field>Accrual_Is_Setup_On_Finance_System__c</field>
        <field>Full_Rebate_Detail_Sheet_Attached__c</field>
        <field>Rebate_Expiry_Date__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <label>Step 1</label>
        <name>Step_1</name>
    </approvalStep>
    <description>Single touch, single approver process to oversee the granting of Rebates to Encirc customers</description>
    <emailTemplate>Approval_Process_Email_Templates/Rebate_Approval_Submission</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Rebate__c.CreatedDate</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Rebate__c.RecordType</field>
            <operation>equals</operation>
            <value>Rebate (Encirc)</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Change_Status_Field_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>New_Rebate_Approved_Email_Alert</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Change_Status_Field_to_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>New_Rebate_Rejected_Email_Alert</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Change_Status_Field_to_Pending</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>New_Rebate_Approval_Request_Email_Alert</name>
            <type>Alert</type>
        </action>
    </initialSubmissionActions>
    <label>Rebate Approval</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Rebate_Approval_Manager__c</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
