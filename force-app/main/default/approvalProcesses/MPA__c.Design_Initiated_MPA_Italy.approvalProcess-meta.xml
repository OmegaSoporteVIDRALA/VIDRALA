<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <submitter>Design</submitter>
        <type>group</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Customer__c</field>
        <field>Who_Pays_For_Moulds__c</field>
        <field>Owner</field>
        <field>CreatedBy</field>
        <field>Account_Manager__c</field>
        <field>Approval_Status__c</field>
        <field>Comments__c</field>
        <field>MPA_MPTR_No__c</field>
        <field>RecordType</field>
        <field>Mould_Number__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>g.maselli@vidrala.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>First step in a four step Approval Process - Material Planner to Approve/Reject</description>
        <label>Seek Approval from Material Planner</label>
        <name>Seek_Approval_from_Material_Planner</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Account_Manager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Approval request is passed to the User who is listed as Account Manager on the MPA record.</description>
        <label>Seek Approval from Account Manager</label>
        <name>Seek_Approval_from_Account_Manager</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>e.guarniero@vidrala.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Approval Request is passed to Operations Director</description>
        <label>Seek Approval from Operations Director</label>
        <name>Seek_Approval_from_Operations_Director</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>a.gaggino@vidrala.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Approval Request final step - Finance Director to approve/reject</description>
        <label>Seek Approval from Finance Director</label>
        <name>Seek_Approval_from_Finance_Director</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Italy - Approval Process for MPA records which have been created and submitted by the Design Group</description>
    <emailTemplate>Approval_Process_Email_Templates/MPA_Design_Initiated_Approval_Request</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>(1 OR 4) AND 2 AND 3</booleanFilter>
        <criteriaItems>
            <field>User.Department</field>
            <operation>equals</operation>
            <value>Design</value>
        </criteriaItems>
        <criteriaItems>
            <field>MPA__c.RecordType</field>
            <operation>equals</operation>
            <value>Design Initiated</value>
        </criteriaItems>
        <criteriaItems>
            <field>MPA__c.Sales_Organization_Text__c</field>
            <operation>equals</operation>
            <value>Italy</value>
        </criteriaItems>
        <criteriaItems>
            <field>User.Profile</field>
            <operation>equals</operation>
            <value>System Administrator</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Email_submitter_to_confirm_record_is_Approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Notify_all_members_of_the_Design_Group_that_an_MPA_Approval_Request_has_been_App</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Approval_Status_Field_11</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Notify_all_members_of_the_Design_Group_that_an_MPA_Approval_Request_has_been_Rej</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Notify_submitter_of_Design_Initiated_MPA_approval_that_their_request_has_been_Re</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Approval_Status_Field_3</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Email_all_members_of_Public_Group_Design</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Approval_Status_Field_2</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Design Initiated MPA (Italy)</label>
    <processOrder>5</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
