<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <submitter>Risk_Upside_Submitters</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>pete.jones1@encirc360.com</submitter>
        <type>user</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Customer__c</field>
        <field>Name</field>
        <field>Month__c</field>
        <field>Year__c</field>
        <field>Forecast__c</field>
        <field>Risks__c</field>
        <field>Upsides__c</field>
        <field>Revised_Forecast__c</field>
        <field>Comments__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <label>Seek Approval from Sales Director</label>
        <name>Seek_Approval_from_Sales_Director</name>
    </approvalStep>
    <description>Risk/Upside numbers created for a given Month and Account must be approved by the Sales Director before being applied to Daily Comparatives</description>
    <emailTemplate>Approval_Process_Email_Templates/Forecast_Risk_Opportunity_Approval_Request_Submitted</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Forecast_Risk_Upside__c.Approval_Status__c</field>
            <operation>equals</operation>
            <value>New - Unsubmitted,Rejected</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Email_Risk_Upside_submitter_to_confirm_approval</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Approval_Rejection_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Record_Type_to_Approved_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Risk_Ups_Approval_Sts_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Email_Risk_Upside_submitter_to_advise_of_rejection</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Approval_Rejection_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Record_Type_to_Approved_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Risk_Ups_Approval_Sts_to_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Update_Record_Type_to_Standard</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Risk_Ups_Approval_Sts_to_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Forecast Risk/Upside Approval</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Rebate_Approval_Manager__c</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Update_Risk_Ups_Approval_Status_to_New</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
