<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>New_Leads_Should_Be_Active</fullName>
    <active>true</active>
    <errorConditionFormula>ISNEW()   &amp;&amp;   NOT(ISPICKVAL(Status, &apos;Active&apos;))</errorConditionFormula>
    <errorMessage>The lead should be in &apos;Active&apos; status</errorMessage>
</ValidationRule>
